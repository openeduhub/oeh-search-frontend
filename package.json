{
  "name": "oeh-search-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "clean": "rm -rf dist",
    "prebuild": "graphql-codegen",
    "build": "ng build --configuration production --localize",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "cypress:local:open": "cd e2e-cypress & npm run cypress:local:open",
    "format": "prettier --write src",
    "docker-build": "docker build . --tag openeduhub/oeh-search-frontend:local",
    "docker-run": "docker run --name oeh-search-frontend --rm -ti -p 8080:80 -e RELAY_URL=http://localhost:3000 openeduhub/oeh-search-frontend:local",
    "extract-i18n": "ng extract-i18n oeh-search-frontend --output-path src/locale && ng run oeh-search-frontend:xliffmerge",
    "start-de": "ng serve --configuration=de",
    "generate": "graphql-codegen",
    "generate-api:update-openapi-yaml": "cd build/api-gen && ./generate.sh",
    "generate-api:generate-code": "ng-openapi-gen --input build/api-gen/openapi.yaml",
    "generate-api:format": "prettier -w src/app/api",
    "generate-api": "npm run generate-api:update-openapi-yaml && npm run generate-api:generate-code && npm run generate-api:format",
    "postinstall": "ngcc --tsconfig ./tsconfig.app.json",
    "analyze-bundle": "ng build --stats-json && webpack-bundle-analyzer ./dist/oeh-search-frontend/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^12.2.4",
    "@angular/cdk": "^12.2.4",
    "@angular/common": "^12.2.4",
    "@angular/compiler": "^12.2.4",
    "@angular/core": "^12.2.4",
    "@angular/forms": "^12.2.4",
    "@angular/localize": "^12.2.4",
    "@angular/material": "^12.2.4",
    "@angular/platform-browser": "^12.2.4",
    "@angular/platform-browser-dynamic": "^12.2.4",
    "@angular/router": "^12.2.4",
    "@apollo/client": "^3.3.21",
    "@ngx-i18nsupport/tooling": "^8.0.3",
    "@ngx-translate/core": "^13.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "apollo-angular": "^2.6.0",
    "graphql": "^15.5.1",
    "jquery": "^3.6.0",
    "material-icons": "^0.3.1",
    "ngx-slick-carousel": "^0.5.1",
    "rxjs": "^6.6.3",
    "slick-carousel": "^1.8.1",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.2.4",
    "@angular-eslint/builder": "1.2.0",
    "@angular-eslint/eslint-plugin": "1.2.0",
    "@angular-eslint/eslint-plugin-template": "1.2.0",
    "@angular-eslint/schematics": "1.2.0",
    "@angular-eslint/template-parser": "1.2.0",
    "@angular/cli": "^12.2.4",
    "@angular/compiler-cli": "^12.2.4",
    "@angular/language-service": "^12.2.4",
    "@graphql-codegen/cli": "^1.19.2",
    "@graphql-codegen/fragment-matcher": "^2.0.1",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-apollo-angular": "^2.3.0",
    "@graphql-codegen/typescript-operations": "^1.17.10",
    "@ngx-i18nsupport/ngx-i18nsupport": "^1.1.6",
    "@types/jasmine": "^3.6.2",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "codelyzer": "^6.0.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.6",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "husky": "^4.3.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.5.1",
    "ng-openapi-gen": "^0.17.2",
    "prettier": "^2.3.2",
    "ts-node": "^8.10.2",
    "typescript": "^4.3.5",
    "webpack-bundle-analyzer": "^4.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,html,css,scss}": "prettier --write",
    "*.ts": "eslint --fix"
  }
}
