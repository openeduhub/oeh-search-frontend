{
  "name": "oeh-search-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "graphql-codegen -w & ng serve",
    "clean": "rm -rf dist",
    "prebuild": "graphql-codegen",
    "build": "ng build --prod --localize",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "cypress:local:open": "cd e2e-cypress & npm run cypress:local:open",
    "format": "prettier --write src",
    "docker-build": "docker build . --tag openeduhub/oeh-search-frontend:local",
    "docker-run": "docker run --name oeh-search-frontend --rm -ti -p 8080:80 -e RELAY_URL=http://localhost:3000 openeduhub/oeh-search-frontend:local",
    "extract-i18n": "ng  extract-i18n oeh-search-frontend --output-path src/locale && ng run oeh-search-frontend:xliffmerge",
    "start-de": "ng serve --configuration=de",
    "generate": "graphql-codegen",
    "postinstall": "ngcc --tsconfig ./tsconfig.app.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^11.0.1",
    "@angular/cdk": "^11.0.0",
    "@angular/common": "^11.0.1",
    "@angular/compiler": "^11.0.1",
    "@angular/core": "^11.0.1",
    "@angular/forms": "^11.0.1",
    "@angular/localize": "^11.0.1",
    "@angular/material": "^11.0.0",
    "@angular/platform-browser": "^11.0.1",
    "@angular/platform-browser-dynamic": "^11.0.1",
    "@angular/router": "^11.0.1",
    "@ngx-i18nsupport/tooling": "^8.0.3",
    "@openfonts/montserrat_all": "^1.44.2",
    "angular-oauth2-oidc": "^10.0.3",
    "apollo-angular": "^1.10.0",
    "apollo-angular-link-http": "^1.11.0",
    "apollo-angular-link-http-batch": "^1.9.0",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "material-icons": "^0.3.1",
    "rxjs": "^6.6.3",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1100.2",
    "@angular/cli": "^11.0.2",
    "@angular/compiler-cli": "^11.0.1",
    "@angular/language-service": "^11.0.1",
    "@graphql-codegen/cli": "^1.17.10",
    "@graphql-codegen/fragment-matcher": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.10",
    "@graphql-codegen/typescript-apollo-angular": "^1.17.7",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@ngx-i18nsupport/ngx-i18nsupport": "^1.1.6",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^14.11.8",
    "codelyzer": "^6.0.0",
    "husky": "^4.3.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,html,css,scss}": "prettier --write",
    "*.ts": "tslint --fix"
  }
}
