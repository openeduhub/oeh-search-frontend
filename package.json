{
  "name": "oeh-search-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start-de": "ng serve --configuration=de",
    "start:web-components-example": "http-server projects/web-components/example/web-components",
    "start:lib-dev": "ng serve --configuration=lib-dev",
    "start-de:lib-dev": "ng serve --configuration=lib-dev-de",
    "clean": "rm -rf dist",
    "clean-cache-install": "npm cache clean --force && npm i",
    "build": "ng build --localize --base-href /search/",
    "build:web-components": "ng build web-components --output-hashing none",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "cypress:local:open": "cd e2e-cypress && npm run cypress:local:open",
    "format": "prettier --write src",
    "docker-build": "docker build . --tag openeduhub/oeh-search-frontend:local",
    "docker-run": "docker run --name oeh-search-frontend --rm -p 8080:80 --env EDU_SHARING_API_URL=https://repository.staging.openeduhub.net/edu-sharing/rest openeduhub/oeh-search-frontend:local",
    "extract-i18n": "ng extract-i18n oeh-search-frontend --output-path src/locale",
    "analyze-bundle": "ng build --stats-json && webpack-bundle-analyzer ./dist/oeh-search-frontend/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/cdk": "^19.2.18",
    "@angular/common": "^19.2.14",
    "@angular/compiler": "^19.2.14",
    "@angular/core": "^19.2.14",
    "@angular/elements": "^19.2.14",
    "@angular/forms": "^19.2.14",
    "@angular/localize": "^19.2.14",
    "@angular/material": "^19.2.18",
    "@angular/platform-browser": "^19.2.14",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/router": "^19.2.14",
    "@ngx-translate/core": "^15.0.0",
    "jquery": "^3.6.0",
    "material-icons": "^1.12.1",
    "ngx-colors": "^3.6.0",
    "ngx-edu-sharing-api": "^10.0.8",
    "ngx-edu-sharing-b-api": "^0.0.7",
    "ngx-edu-sharing-ui": "^10.0.25",
    "ngx-edu-sharing-wlo-pages": "^0.2.0",
    "ngx-slick-carousel": "^19.0.0",
    "qs": "^6.12.1",
    "rxjs": "^7.8.1",
    "slick-carousel": "^1.8.1",
    "tslib": "^2.3.1",
    "uuid": "^11.1.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1902.15",
    "@angular-devkit/build-angular": "^19.2.15",
    "@angular-eslint/builder": "18.0.1",
    "@angular-eslint/eslint-plugin": "18.0.1",
    "@angular-eslint/eslint-plugin-template": "18.0.1",
    "@angular-eslint/schematics": "18.0.1",
    "@angular-eslint/template-parser": "18.0.1",
    "@angular/cli": "^19.2.15",
    "@angular/compiler-cli": "^19.2.14",
    "@angular/language-service": "^19.2.14",
    "@types/jasmine": "^3.6.2",
    "@types/jasminewd2": "~2.0.3",
    "@types/jquery": "^3.5.32",
    "@types/node": "^14.14.9",
    "@types/slick-carousel": "^1.6.40",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "codelyzer": "^6.0.2",
    "eslint": "^8.57.0",
    "http-server": "^14.1.0",
    "husky": "^4.3.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.5.1",
    "ng-openapi-gen": "^0.23.0",
    "prettier": "^2.5.1",
    "ts-node": "^8.10.2",
    "typescript": "~5.8.3",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-sources": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,html,css,scss}": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "overrides": {
    "ngx-edu-sharing-wlo-pages": {
      "@angular/animations": "^19.0.0",
      "@angular/common": "^19.0.0",
      "@angular/core": "^19.0.0",
      "@angular/forms": "^19.0.0",
      "@angular/material": "^19.2.18",
      "@bluehalo/ngx-leaflet": "^19.0.0",
      "@bluehalo/ngx-leaflet-markercluster": "^19.0.0"
    }
  }
}
